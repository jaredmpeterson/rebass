{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-immutable",
    "tslint-config-prettier"
  ],
  "rules": {
    "array-type": false,
    "arrow-parens": false,
    "arrow-return-shorthand": [false],
    "ban-types": false, // to change
    "class-name": true,
    "comment-format": [true, "check-space"],
    "forin": true,
    "import-blacklist": [true, "lodash"],
    "interface-over-type-literal": false,
    "interface-name": false,
    "max-classes-per-file": true,
    "member-access": false,
    "member-ordering": [true, { "order": "fields-first" }],
    "newline-before-return": false,
    "no-any": true,
    "no-console": true,
    "no-empty-interface": false,
    "no-import-side-effect": true,
    "no-inferrable-types": [true, "ignore-params", "ignore-properties"],
    "no-invalid-this": [true, "check-function-in-method"],
    "no-namespace": true,
    "no-non-null-assertion": true,
    "no-null-keyword": false,
    "no-require-imports": true,
    "no-shadowed-variable": false,
    "no-submodule-imports": false,
    "no-this-assignment": [true, { "allow-destructuring": true }],
    "no-unused-expression": true,
    "no-parameter-reassignment": true,
    "object-literal-sort-keys": false,
    "object-literal-shorthand": true,
    "one-variable-per-declaration": false,
    "only-arrow-functions": [true, "allow-declarations"],
    "ordered-imports": true,
    "prefer-const": true,
    "prefer-for-of": true,
    "prefer-method-signature": false,
    "prefer-template": [true, "allow-single-concat"],
    "triple-equals": [true, "allow-null-check"],
    "type-literal-delimiter": false, // true
    "typedef": false, // "typedef": [true, "parameter", "property-declaration"],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore"
    ], //true
    // tslint-react
    "jsx-no-lambda": false,
    // tslint-immutable
    "no-let": true,
    "no-object-mutation": [true, { "ignore-prefix": "mutable" }],
    "no-array-mutation": true
  },
  "jsRules": {
    "no-console": true,
    "object-literal-sort-keys": false
  },
  "defaultSeverity": "error",
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js",
      "dist/*",
      "build/*",
      "public/*",
      "test/*",
      "scripts/*",
      ".*",
      "node_modules"
    ]
  }
}
